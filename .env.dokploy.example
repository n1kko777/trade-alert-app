# =============================================================================
# TradePulse - Dokploy Environment Variables
# =============================================================================
# Copy these variables to your Dokploy project environment settings
# =============================================================================

# Domain Configuration
DOMAIN=tradealert.ru
API_DOMAIN=api.tradealert.ru

# Database (PostgreSQL)
DB_USER=tradepulse
DB_PASSWORD=your-secure-password-min-32-chars-here
DB_NAME=tradepulse

# Redis
REDIS_PASSWORD=your-secure-redis-password-min-32-chars

# JWT Secrets (generate with: openssl rand -base64 48)
JWT_SECRET=your-jwt-secret-generate-with-openssl-rand-base64-48
JWT_REFRESH_SECRET=your-jwt-refresh-secret-different-from-jwt-secret

# OpenAI (optional, for AI features)
OPENAI_API_KEY=sk-your-openai-api-key

# Other settings
LOG_LEVEL=info
RATE_LIMIT_MAX=100
